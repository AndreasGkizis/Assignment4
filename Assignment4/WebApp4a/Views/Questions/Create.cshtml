@using ModelLibrary.Models.Certificates
@using ModelLibrary.Models.Questions
@model ModelLibrary.Models.Questions.Question

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Question</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control"/>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DifficultyLevel.Difficulty" class="control-label"></label>
                @Html.DropDownListFor(q => q.DifficultyLevel.Difficulty, Html.GetEnumSelectList<DifficultyEnum>())
                <span asp-validation-for="DifficultyLevel.Difficulty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic" class="control-label"></label>
                @Html.DropDownList("Topic", "Select Topic")
                <span asp-validation-for="Topic" class="text-danger"></span>
            </div>

            @for (int i = 0, optionNumber = 1; i < Model.Options.Count; i++, optionNumber++)
            {
                <h4>
                    Option @optionNumber
                </h4>
                <div class="form-group">
                    <label asp-for="Options.ElementAt(i).Text" class="control-label"></label>
                    @{
                        var textName = $"Text{optionNumber}";
                    }
                    <input name="@textName" asp-for="Options.ElementAt(i).Text" class="form-control"/>
                    <span asp-validation-for="Options.ElementAt(i).Text" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Options.ElementAt(i).Correct" class="control-label"></label>
                    @{
                        var correctName = $"Correct{optionNumber}";
                    }
                    @Html.CheckBox(@correctName, Model.Options.ElementAt(i).Correct)
                    <span asp-validation-for="Options.ElementAt(i).Correct" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

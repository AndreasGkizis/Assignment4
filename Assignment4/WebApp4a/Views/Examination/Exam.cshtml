@model IEnumerable<ModelLibrary.Models.Questions.Question>

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("GetAnswers", "Examination", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <table class="table">
        <thead>
            <tr>
                <th>Questions</th>
                <th>Available Answers</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @foreach (var option in item.Options)
                        {
                            @option.Text
                            @:&nbsp;
                            @Html.RadioButton(option.Text, option.Correct, false)
                            @Html.Hidden("hiddens", option.Correct)                            
                            @:&nbsp;
                            @:&nbsp;
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row justify-content-md-center">
        <div class="col col-lg-1">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
    </div>
}
